<table class="table table-hover">
  <thead>
    <tr>
      <th>メッセージ一覧</th>
    </tr>
  </thead>
  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% target_user = room.target_user(current_user) %>
            <% if target_user.present? %>
              <%= link_to target_user.profile.name, rooms_path(room) %>
              <%= room.chats.last.message %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
