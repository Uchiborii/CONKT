<!DOCTYPE html>

<html>
  <head>
    <title>ApplicationTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user.try(:admin?) %>
    <%= link_to '管理者ログイン', rails_admin_path %>
    <% end %>
    <% if user_signed_in? %>
      <%= link_to "参加者一覧", profiles_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%= link_to "マイページ", pages_show_path %>
      <%= link_to "メッセージ一覧", rooms_path %>
      <%= link_to "相性診断(仮)", new_answer_path(current_user) %>
      <%= link_to "気になる一覧", favorites_path %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
