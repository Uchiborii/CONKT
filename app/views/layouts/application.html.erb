<!DOCTYPE html>

<html>
  <head>
    <title>ApplicationTest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<% if current_user.present? && guest? %>
  <%= link_to "相性診断ページ", new_answer_path %>
<% end %>

    <% if current_user.try(:admin?) %>
    <%= link_to '管理者ログイン', rails_admin_path %>
    <% end %>

    <% if user_signed_in? %>
      <%= link_to "トップページ", pages_index_path %>
      <%= link_to "参加者一覧", profiles_path %>
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      <%= link_to "マイページ", pages_show_path %>
      <%= link_to "メッセージ一覧", rooms_path %>
      <%= link_to "気になる一覧", favorites_path %>
    <% else %>
      <%= link_to "新規登録", new_user_registration_path %>
      <%= link_to "ログイン", new_user_session_path %>
      <%= link_to 'ゲストログイン（閲覧用）', pages_guest_sign_in_path, method: :post %>
    <% end %>

    <% if notice %>
      <p class="alert alert-notice"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-error"><%= alert %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
