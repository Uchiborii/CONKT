<h1>参加者一覧</h1>

<table>
  <body>
    <tr class="participants-row">
      <% count = 0 %>
      <% @profiles.each do |profile| %>
        <% if current_user.profile && current_user.profile.sex != profile.sex %>
          <td>
            <% if profile.icon.present? %>
              <%= link_to profile_path(profile) do %>
                <%= image_tag profile.icon.url, class: 'mypage-icon' %>
                <div class="profile-name-top"><%= profile.name %></div>
              <% end %>
            <% else %>
              <% default_icon = Profile.default_icons.sample %>
              <%= link_to profile_path(profile) do %>
                <%= image_tag default_icon, class: 'mypage-icon' %>
                <div class="profile-name-top"><%= profile.name %></div>
              <% end %>
            <% end %>
          </td>
          <% count += 1 %>
          <% if count == 6 %>
            </tr><tr class="participants-row">
            <% count = 0 %>
          <% end %>
        <% end %>
      <% end %>
    </tr>
  </body>
</table>

