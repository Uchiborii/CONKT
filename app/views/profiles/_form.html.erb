<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <% if current_user.present? %>
        <p>こんにちは、<%= current_user.profile.name %>さん！</p>
      <% else %>
        <p>こんにちは、ゲストさん！</p>
      <% end %>

      <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="profile-new">
  <div class="profile-field">
    <%= form.label :icon, "アイコン画像" %>
    <%= form.file_field :icon %>
  </div>

  <div class="profile-field">
    <%= form.label :name %>
    <%= form.text_field :name, placeholder: "例) 山田 太郎" %>
  </div>

  <div class="sex-field">
    <%= form.label :sex, "性別" %>
    <%= form.radio_button :sex, :男性 %>
    <span class="radio-label">男性</span> <!-- ここに変更を加える -->
    <%= form.radio_button :sex, :女性 %>
    <span class="radio-label">女性</span>
  </div>

  <div class="profile-field">
    <%= form.label :age %>
    <%= form.text_field :age, placeholder: "例) 30" %>
  </div>

  <div class="profile-field">
    <%= form.label :work %>
    <%= form.text_field :work, placeholder: "例) 会社員" %>
  </div>

  <div class="profile-field">
    <%= form.label :hobby %>
    <%= form.text_field :hobby, placeholder: "例) xxxx" %>
  </div>

  <div class="profile-field">
    <%= form.label :likes %>
    <%= form.text_field :likes, placeholder: "例) xxxx" %>
  </div>

  <div class="profile-field">
    <%= form.label :comment %>
    <%= form.text_field :comment, placeholder: "例) xxxx" %>
  </div>
</div>

  <div class="actions">
    <%= form.submit "登録", class: "submit-button" %>
  </div>
<% end %>
